extra-source-files: CHANGELOG.md
build-type:         Custom

custom-setup
  setup-depends:    base
                  , Cabal
                  , cabal-doctest >= 1 && <1.1

library
  exposed-modules:  Language.STLC
                  , Language.STLC.Gen
                  , Language.STLC.Sample
                  , Language.CL
                  , Language.STLC2CL
                  , Paths_gen_tm
  autogen-modules:  Paths_gen_tm
  build-depends:    aeson >= 1.5.6.0
                  , base
                  , bytestring >= 0.10.12.0
                  , containers
                  , hedgehog
                  , mmorph
                  , monad-dijkstra
                  , mtl
                  , text >= 1.2.4.1
                  , transformers
  hs-source-dirs:   src
  default-language: Haskell2010
  ghc-options:      -W -Wall -O2

executable gen-tm
  main-is:          Main.hs
  other-modules:    Dataset
                  , Paths_gen_tm
  autogen-modules:  Paths_gen_tm
  hs-source-dirs:   exe
  build-depends:    aeson
                  , base
                  , bytestring >= 0.10.12.0
                  , gen-tm
                  , hedgehog
                  , mtl
                  , optparse-applicative
                  , pipes
                  , pipes-bytestring
                  , pipes-safe
                  , text
                  , transformers
  default-language: Haskell2010
  ghc-options:      -W -Wall -O2 -threaded -rtsopts

test-suite spec
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          Spec.hs
  other-modules:    Language.STLCSpec
                  , Language.STLC2CLSpec
  build-depends:    QuickCheck
                  , base
                  , containers
                  , base
                  , bytestring >= 0.10.12.0
                  , gen-tm
                  , hedgehog
                  , hedgehog-quickcheck
                  , hspec
                  , hspec-hedgehog
                  , mmorph
                  , mtl
                  , text
                  , transformers
  default-language: Haskell2010
  ghc-options:      -W -Wall -O2

test-suite doctests
  type:             exitcode-stdio-1.0
  hs-source-dirs:   doctests
  x-doctest-options:
                    --no-magic
  main-is:          Doctests.hs
  build-depends:    base
                  , bytestring >= 0.10.12.0
                  , doctest
  default-language: Haskell2010
  ghc-options:      -W -Wall -O2 -threaded -rtsopts -with-rtsopts=-N
